{% extends 'layout.twig' %}

{% block body %}


<section id="home_instr_top">

    <div class="home_instr_top__col_left">
        <div class="create_new_container">
            <div class="create_new__title grey">
                New Class
            </div>
            <div class="create_new__text grey">
                Here you can create a new yoga class.
            </div>
            <div class="create_new__text grey">
                Once it is published, users will be able to find it on the search page.
            </div>

            <button id="home_instr_create_class_btn"><a href="#new_class_form_wrapper">Add a new class</a></button>
        </div>

        <div class="create_new_container">
            <div class="create_new__title grey">
                New Event
            </div>
            <div class="create_new__text grey">
                Planning something bigger than a regular class?
